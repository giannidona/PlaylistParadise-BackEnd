<link rel="stylesheet" href="/static/css/home.css" />

<nav class="nav__bar">
  <ul class="nav__links">
    <li class="nav__items"><a href="http://localhost:8080/home">HOME</a></li>
    <li class="nav__items"><a href="http://localhost:8080/myposts">MY POSTS</a></li>
    <li class="nav__items"><a href="http://localhost:8080/createpost">CREATE
        POST</a></li>
    <li class="nav__items">{{this.username}}</li>
  </ul>
</nav>
<section id="posts">
  <div class="container">
    {{#each posts}}
      <div class="card">
        <div class="card__img">
          <img src="http://localhost:8080/static/{{this.post_image}}" alt="" />
        </div>
        <div class="card__info">
          <p class="title">{{this.title}}</p>
          <p>{{this.description}}</p>
          <div class="creator__post__info">
            <div class="user__info">
              <img
                class="profile__img"
                src="/static/profile-picture.png"
                alt="profile picture"
              />
              <p class="user">{{this.user.username}}</p>
            </div>
          </div>
        </div>
        <div class="container__edit__btn">
          <div>
            <a
              class="edit__btn"
              data-id-post="{{this._id}}"
              href="/editpost/{{_id}}"
            >Edit Post</a>
          </div>
          <div>
            <form
              method="POST"
              action="/deletepost/{{this._id}}?_method=DELETE"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button class="delete__btn" type="submit">Delete Post</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>

<script src="/static/js/newPost.js"></script>