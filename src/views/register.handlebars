<link rel="stylesheet" href="/static/css/register.css" />

<section id="register">
  <div class="container">
    <p class="title">WELCOME TO CMS</p>
    <p class="subtitle">REGISTER</p>
    <div class="container__form">
      <form action="/register" method="post" enctype="multipart/form-data">
        <div class="container__username">
          <input
            type="text"
            id="username"
            name="username"
            placeholder="username"
          />
        </div>
        <div class="container__email">
          <input type="email" id="email" name="email" placeholder="email" />
        </div>
        <div class="container__password">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="password"
          />
        </div>
        <div class="container__profile__image">
          <input
            type="file"
            id="profile_image"
            name="file"
            class="profile_image"
          />
          <label for="profile_image">Select Picture</label>
        </div>
        <div class="container__button">
          <button type="submit">Register</button>
        </div>
      </form>
      <div>
        <p>or login
          <a class="login" href="/login">here</a></p>
      </div>
    </div>
  </div>
</section>